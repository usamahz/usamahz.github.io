---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Services" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5">AI/ML Services</div>
  </div>

  <HorizontalCard
    title="Custom ML Model Development"
    img="/post_img.webp"
    desc="End-to-end development of custom machine learning models tailored to your specific business needs and use cases."
    badge="NEW"
    url="/contact"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="ML Model Deployment"
    img="/post_img.webp"
    desc="Professional deployment of machine learning models with robust monitoring, scaling, and maintenance support."
    url="/contact"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="AI Consulting"
    img="/post_img.webp"
    desc="Expert guidance on implementing AI solutions, from strategy development to technical implementation."
    url="/contact"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="ML Training & Workshops"
    img="/post_img.webp"
    desc="Comprehensive training programs and workshops on machine learning, deep learning, and AI technologies."
    url="/contact"
  />
</BaseLayout>
